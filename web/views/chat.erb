<html>
  <head>
    <title>Chatty</title>
    <link rel="stylesheet" href="application.css" type="text/css" />

    <!--[if IE]>
    <script src="lib/jquery.js" type="text/javascript"></script>
    <![endif]-->
    <![if !IE]>
    <script src="lib/zepto.js" type="text/javascript"></script>
    <![endif]>
    <script src="lib/color.js" type="text/javascript"></script>
    <script src="lib/flash_socket/swfobject.js" type="text/javascript">
    </script>
    <script src="lib/flash_socket/web_socket.js" type="text/javascript">
    </script>
    <script type="text/javascript">
      WEB_SOCKET_SWF_LOCATION = "lib/flash_socket/WebSocketMain.swf";
    </script>
    <script src="application.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="browser-window">
      <div class="chat-box" data-server="<%= @chat_url %>">
        <style type="text/css" scoped="scoped">
        </style>
        <section class="title-bar">
          <ul class="notification-bar">
            <li class="desktop" title="Enable desktop notifications">
              <i class="icon-bullhorn"></i>
            </li>
            <li class="av-error" title="Video Malfunction">
              <i class="icon-eye-close"></i>
            </li>
            <li class="av-live" title="Webcam Active">
              <i class="icon-eye"></i>
            </li>
            <li class="network-error visible" title="Loading">
              <i class="icon-bolt"></i>
            </li>
            <li class="network-ok" title="Connected">
              <i class="icon-signal"></i>
            </li>
          </ul>
          <span title="Chat Room">
            <i class="icon-comments"></i>
          </span>
          <span class="room-title">
            chat
          </span>
        </section>
        <ul class="user-list">

        </ul>
        <form class="composer">
          <textarea class="message" autofocus="autofocus" disabled="disabled"
               placeholder="Type your message here. Press Enter to send.">
          </textarea>
        </form>
        <ul class="history">

        </ul>
      </div>
    </div>
  </body>
</html>
